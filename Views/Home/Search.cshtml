@model IEnumerable<CompShop2.Models.Goods>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProvidedBy)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Categorys.CatName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProvidedBy)
            </td>
            <td>
                @using (Html.BeginForm("Sell", "Home", new { ProdID = item.GoodsID }))
                {
                    @Html.Editor("count");
                    <input type="submit" value="Sell" />
                }
            </td>
            <td>
                @{ if (User.IsInRole("Manager"))
                    {@Html.ActionLink("Spisat", "Spisat", new { ProdID = item.GoodsID }) }
                }
                @Html.ActionLink("Edit", "Edit", new { id = item.GoodsID }) |
                @Html.ActionLink("Details", "Details", new { id = item.GoodsID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.GoodsID })
            </td>
        </tr>
    }

</table>